<div class="container" style="margin-top:2rem;">
    <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="row justify-content-md-center">
            <h2>Register</h2>
        </div>

        <form id="form" action="/users/register" method="POST" class="col justify-content-md-center needs-validation"
            novalidate>
            <div class="form-group">
                <label for="first" class="form-label">First Name*</label>
                <input placeholder="First Name" class="form-control" type="text" name="firstname" required
                    pattern="[A-Za-z]+([\-'][A-Za-z]+)*">
                <div class="invalid-feedback">
                    Please enter a valid first name.
                </div>
            </div>

            <div class="form-group">
                <label for="last" class="form-label">Last Name*</label>
                <input placeholder="Last name" class="form-control" type="text" name="lastname" required
                    pattern="^[A-Za-z-']+( [A-Za-z-']+)?$">
                <div class="invalid-feedback">
                    Please enter a valid last name.
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="form-label">Username*</label>
                <input placeholder="Username" class="form-control" type="text" name="username" required minlength="6"
                    maxlength="40" pattern="^[a-zA-Z0-9]+$">
                <div class="invalid-feedback">
                    Please enter a valid username (must contain 6-40 alphanumeric characters only).
                </div>
            </div>

            <div class="form-group">
                <label for="telephone" class="form-label">Phone Number*</label>
                <input placeholder="Phone Number" class="form-control" type="tel" name="phone" required
                    pattern="^\d{3}\d{3}\d{4}$">
                <div class="invalid-feedback">
                    Please enter a valid phone number.
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">SFSU Email*</label>
                <input placeholder="SFSU Email" class="form-control" type="email" name="email" required
                    pattern="[a-zA-Z0-9]+@(mail\.)?sfsu\.edu$">
                <div class="invalid-feedback">
                    Please enter a valid SFSU email address.
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password*</label>
                <input placeholder="Password" class="form-control" id="inputPassword" type="password" name="password"
                    required pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[0-9])(?=.*[\-+!@#$^&*])[a-zA-Z0-9\-+!@#$^&*]{8,20}$"
                    minlength="8" maxlength="16">
                <div class="invalid-feedback">
                    Please enter a valid password (must contain the following: 1 number, 1 uppercase letter, and 1 special
                    character (- + ! @ # $ ^ & *)).
                </div>
            </div>

            <div class="form-group">
                <label for="confirmpassword" class="form-label">Reenter Password*</label>
                <input placeholder="Reenter Password" class="form-control" id="inputPasswordConfirm"
                    data-match="#inputPassword" data-match-error="Password does not match" type="password"
                    name="re_password" required>
                <div class="invalid-feedback" id="CheckPasswordMatch">
                    Please confirm your password.
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Terms and Conditions
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
    </div>
    <div class="d-flex justify-content-center" style="margin-bottom:2rem">
        <div class="button_container">
            <button type="reset" class="btn btn-outline-dark">Cancel</button>
            <button type="submit" class="btn btn-outline-dark">Sign Up</button>
        </div>
    </div>
    </form>
</div>