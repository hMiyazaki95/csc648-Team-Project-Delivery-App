<div class="container" style="margin-top:2rem;">
    <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="row justify-content-md-center">
            <h2>Restaurant Details</h2>
        </div>

        <form id="restaurant-form" action="/posts/register_restaurant" method="POST" enctype="multipart/form-data"
            class="col justify-content-md-center needs-validation" novalidate>
            <div class="form-group">
                <label for="restaurant_name" class="form-label">Restaurant Name*</label>
                <input placeholder="Restaurant Name" class="form-control" type="text" name="restaurant_name" required
                    minlength="6" maxlength="60" pattern="^[a-zA-Z0-9\s\-.,+'@$!%*#?&]+$">
                <div class="invalid-feedback">
                    Please enter a valid restaurant name.
                </div>
            </div>

            <div class="form-group">
                <label for="address_line" class="form-label">Restaurant Address*</label>
                <input id="address_line" placeholder="Street Address" class="form-control" type="text"
                    name="address_line" required minlength="10" maxlength="100" pattern="[A-Za-z0-9\s#]+">
                <div class="invalid-feedback">
                    Please enter a valid street address (e.g. 1600 Holloway Ave).
                </div>
            </div>

            <div class="form-group">
                <label for="city" class="form-label">City*</label>
                <input id="city" placeholder="City" class="form-control" type="text" name="city" required minlength="4"
                    maxlength="20" pattern="[A-Za-z\s]+">
                <div class="invalid-feedback">
                    Please enter a valid city (e.g. San Francisco).
                </div>
            </div>

            <div class="form-group">
                <label for="state" class="form-label">State*</label>
                <input id="state" placeholder="State" class="form-control" type="text" name="state" required
                    pattern="[A-Z]{2}">
                <div class="invalid-feedback">
                    Please enter a valid state in the specified format (e.g. CA).
                </div>
            </div>

            <div class="form-group">
                <label for="country" class="form-label">Country*</label>
                <input id="country" class="form-control" type="text" name="country" value="United States" readonly>
            </div>

            <div class="form-group">
                <label for="zip_code" class="form-label">Zip Code*</label>
                <input placeholder="Zip Code" class="form-control" type="text" name="zip_code" required
                    pattern="[0-9]{5}(-[0-9]{4})?">
                <div class="invalid-feedback">
                    Please enter a valid zip code (e.g. 5-digit number and optional 4-digit extension).
                </div>
            </div>

            <div class="form-group">
                <label for="restaurant_category">Select a category:</label>
                <select id="restaurant_category" required name="restaurant_category">
                    <option value=""></option>
                    <option value="Asian">Asian</option>
                    <option value="American">American</option>
                    <option value="Mexican">Mexican</option>
                    <option value="Italian">Italian</option>
                </select>
            </div>

            <div class="form-group">
                <label for="delivery_time">Select delivery time:</label>
                <select id="delivery_time" required name="delivery_time">
                    <option value=""></option>
                    <option value="10-15 min">10-15 min</option>
                    <option value="15-20 min">15-20 min</option>
                    <option value="20-30 min">20-30 min</option>
                    <option value="30-40 min">30-40 min</option>
                </select>
            </div>

            <div class="form-group">
                <label for="price_range">Select price range:</label>
                <select id="price_range" required name="price_range">
                    <option value=""></option>
                    <option value="$10-$15">$10-$15</option>
                    <option value="$15-$20">$15-$20</option>
                    <option value="$20-$30">$20-$30</option>
                    <option value="<$10"><$10</option>
                </select>
            </div>



            <p>Special offers (optional)</p>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="">
                    <label class="form-check-label">
                        Weekly Discounts and Promotions
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="">
                    <label class="form-check-label">
                        Free Delivery </label>
                </div>
            </div>

            <div class="form-group">
                <p>Upload Thumbnail for Restaurant*</p>
                <div class="custom-file mb-4" style="margin-bottom:2rem">
                    <label for="file_upload" class="custom-file-label">Choose file...</label>
                    <input placeholder="Choose file..." class="custom-file-input" type="file" name="file_upload"
                        accept="image/*" required>
                    <div class="invalid-feedback">
                        Please upload an image of your restaurant in the specified format.
                    </div>
                </div>
            </div>
    </div>

    <div class="d-flex justify-content-center" style="margin-bottom:2rem">
        <div class="button_container">
            <button type="reset" class="btn btn-outline-dark">Cancel</button>
            <button id="restaurant_submit" type="submit" class="btn btn-outline-dark">Submit Request</button>
        </div>
    </div>
    </form>
</div>